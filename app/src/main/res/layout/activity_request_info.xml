<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.ratapp.ilx.view.activities.RequestInfoActivity">

    <include
        android:id="@+id/inc_header"
        layout="@layout/item_stock_request"
        android:layout_width="wrap_content"
        android:layout_height="75dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1.04" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@color/passivePrimaryDarkColor" />

    <ImageView
        android:id="@+id/iv_map_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1.16"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/example_map" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@color/passivePrimaryDarkColor" />


    <TextView
        android:id="@+id/tv_delivery_cost"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="4dp"
        android:minHeight="18dp"
        android:layout_weight="1.48"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_comission"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="4dp"
        android:minHeight="18dp"
        android:layout_weight="1.48"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_accept"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1.34"
        app:button_background="@drawable/shape_button_swipe"
        app:button_bottom_padding="6dp"
        app:button_image_height="60dp"
        app:button_image_width="100dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:has_activate_state="true"
        app:button_trail_enabled="false"
        app:initial_state="disabled"
        app:inner_text="@string/accept_order"
        app:inner_text_background="@drawable/shape_rounded_swipe"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@android:color/darker_gray"
        app:inner_text_size="16sp"
        app:inner_text_left_padding="90dp"
        app:inner_text_top_padding="18dp" />

</LinearLayout>
