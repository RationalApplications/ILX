<resources>

    <attr name="sideNavBar" format="reference"/>

    <style name="AppTheme.Active" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="sideNavBar">@drawable/side_active_nav_bar</item>
        <item name="android:actionBarStyle">@style/ActionBarActive</item>
    </style>

    <style name="AppTheme.Passive" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/passive_primary_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/passive_accent_color</item>
        <item name="sideNavBar">@drawable/side_passive_nav_bar</item>
        <item name="android:actionBarStyle">@style/ActionBarPassive</item>
    </style>

    <style name="AppTheme.Active.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Passive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarPassive" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#444</item>
    </style>

    <style name="ActionBarActive" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#75a9f9</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/sub_text_size</item>
    </style>
</resources>
